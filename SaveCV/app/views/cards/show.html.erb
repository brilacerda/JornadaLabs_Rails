
	<% if flash[:notice] -%>
		<p class='notice'>
			<%=h flash[:notice] %>
		</p>
	<% end -%>

	<p> 
		<strong> nome </strong>
		<%= @card.nome %> 
	</p> 

	<p> 
		<strong> numero </strong>
		<%= @card.numero %> 
	</p> 
		<strong> especialidade </strong>
		<%= @card.especialidade %> 
	</p> 

	<p> 
		<strong> regiao </strong>
		<%= @card.regiao %> 
	</p>  
		<strong> cartaodevisita </strong>
		<%= @card.cartaodevisita %> 
	</p> 

	<h3>
		<strong>Reviews</strong>
	</h3>
	<% @card.reviews.each do |r| %>
		<p>
			<strong>Nota</strong>
			<%= r.rate %>
		</p>
		<p>
			<strong>Comentários</strong>
			<%= r.comment %>
		</p>
	<%end%>

	<h4> Avalie o profissional </h4>
	<%= form_for ([@card, @card.reviews.build]) do |f| %>

	<p>
		<%=f.label :rate %><br>
		<%=f.range_field(:rate, in: 0..4) %>
	</p>

	<p>
		<%= f.label :comment %><br>
		<%= f.text_area :comment %>	
	</p>

	<p>
		<%= f.submit %>
	</p>

	<%end%>

<%= link_to "Editar", edit_card_path %>
<%= link_to "Deletar", card_path(@card),
						method: :delete,
						data: {confirm: "Deseja mesmo deletar esse cartão?"}%>
<%= link_to "Voltar para Meus Cartões", cards_path %>